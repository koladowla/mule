<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 
                             https://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>3607ebc0-9f6f-45e6-81c1-121fa7ccfb16</groupId>
    <artifactId>job_mail</artifactId>
    <version>1.0.0</version>
    <packaging>mule-application</packaging>

    <name>job_mail</name>
    <description>MuleSoft application for job_mail</description>

    <properties>
        <mule.version>4.6.22</mule.version>
        <mule.maven.plugin.version>4.5.3</mule.maven.plugin.version>
        <anypoint.username>${anypoint.username}</anypoint.username>
        <anypoint.password>${anypoint.password}</anypoint.password>
    </properties>

    <repositories>
        <repository>
            <id>mulesoft-releases</id>
            <url>https://repository.mulesoft.org/nexus/content/repositories/releases/</url>
        </repository>
    </repositories>

    <dependencies>
        <!-- Add your Mule dependencies here -->
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.mule.tools.maven</groupId>
                <artifactId>mule-maven-plugin</artifactId>
                <version>${mule.maven.plugin.version}</version>
                <extensions>true</extensions>
                <configuration>
                    <deployment>
                        <target>cloudhub</target>
                        <username>${anypoint.username}</username>
                        <password>${anypoint.password}</password>
                        <applicationName>job_mail</applicationName>
                        <region>us-east-1</region>
                        <workers>
                            <amount>1</amount>
                            <type>Micro</type>
                        </workers>
                        <runtime>4.6.0</runtime>
                    </deployment>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
