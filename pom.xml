<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- Basic Project Metadata -->
    <groupId>{YOUR_GROUP_ID}</groupId> <!-- e.g., com.mycompany -->
    <artifactId>{YOUR_APP_NAME}</artifactId> <!-- e.g., my-mule-app -->
    <version>1.0.0-SNAPSHOT</version>
    <packaging>mule-application</packaging>
    <name>{YOUR_APP_NAME}</name>

    <!-- Properties for Versions and Deployment -->
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <mule.maven.plugin.version>4.6.0</mule.maven.plugin.version> <!-- Latest as of Nov 2025 -->
        <mule.version>4.5.0</mule.version> <!-- Update to your Mule runtime version -->
        <mule.tools.version>3.5.3</mule.tools.version> <!-- For Maven tools -->
        <maven.compiler.source>17</maven.compiler.source> <!-- Or 8/11 -->
        <maven.compiler.target>17</maven.compiler.target>
        <environment>Sandbox</environment> <!-- Default; override in Jenkins with -Denvironment=Production -->
        <targetName>Cloudhub-US-East-1</targetName> <!-- Shared space example; override in Jenkins -->
        <appName>${project.artifactId}</appName> <!-- Uses artifactId as app name -->
        <muleVersion>${mule.version}</muleVersion> <!-- Matches property -->
        <releaseChannel>LTS</releaseChannel> <!-- EDGE (default), LTS, NONE -->
        <javaVersion>17</javaVersion> <!-- 8 (default), 17 -->
        <user>{YOUR_ANYPPOINT_USERNAME}</user> <!-- Optional: Use placeholders for Jenkins injection -->
        <pass>{YOUR_ANYPPOINT_PASSWORD}</pass> <!-- Better: Use encrypted server creds -->
        <publicURL>https://${appName}.anypoint.mulesoft.com</publicURL> <!-- Custom URL -->
        <!-- Jenkins-friendly: Inject via env vars, e.g., -Duser=$ANYPPOINT_USER -->
    </properties>

    <!-- Dependencies: Add your Mule connectors/domains here -->
    <dependencies>
        <!-- Mule Runtime -->
        <dependency>
            <groupId>org.mule.runtime</groupId>
            <artifactId>mule-core</artifactId>
            <version>${mule.version}</version>
            <classifier>mule-plugin</classifier>
            <scope>provided</scope>
        </dependency>
        <!-- Example: HTTP Connector -->
        <dependency>
            <groupId>org.mule.connectors</groupId>
            <artifactId>mule-http-connector</artifactId>
            <version>1.9.0</version>
            <classifier>mule-plugin</classifier>
            <scope>provided</scope>
        </dependency>
        <!-- Add more, e.g., database-connector, etc. -->
    </dependencies>

    <!-- Distribution Management: For Publishing to Exchange -->
    <distributionManagement>
        <repository>
            <id>anypoint-exchange</id>
            <name>Anypoint Exchange</name>
            <url>https://maven.anypoint.mulesoft.com/api/v3/organizations/{ORGANIZATION_ID}/maven</url> <!-- Replace {ORGANIZATION_ID} -->
            <layout>default</layout>
        </repository>
    </distributionManagement>

    <!-- Build Configuration -->
    <build>
        <sourceDirectory>src/main/java</sourceDirectory>
        <testSourceDirectory>src/test/java</testSourceDirectory>

        <plugins>
            <!-- Mule Maven Plugin: Core for Packaging & Deployment -->
            <plugin>
                <groupId>org.mule.tools.maven</groupId>
                <artifactId>mule-maven-plugin</artifactId>
                <version>${mule.maven.plugin.version}</version>
                <extensions>true</extensions>
                <configuration>
                    <!-- CloudHub 2.0 Deployment Config -->
                    <cloudhub2Deployment>
                        <uri>https://anypoint.mulesoft.com</uri>
                        <provider>MC</provider>
                        <environment>${environment}</environment>
                        <target>${targetName}</target>
                        <muleVersion>${muleVersion}</muleVersion>
                        <releaseChannel>${releaseChannel}</releaseChannel>
                        <javaVersion>${javaVersion}</javaVersion>
                        <applicationName>${appName}</applicationName>
                        <replicas>1</replicas>
                        <vCores>0.2</vCores> <!-- Small instance; scale as needed -->
                        <!-- Authentication: Use <server> for Jenkins (see notes below) -->
                        <server>anypoint-credentials</server> <!-- References settings.xml server ID -->
                        <!-- Fallback (insecure for prod): <username>${user}</username><password>${pass}</password> -->

                        <!-- App Properties (injected at deploy time) -->
                        <properties>
                            <http.port>8081</http.port>
                            <app.name>${appName}</app.name>
                            <!-- Add custom props, e.g., <db.url>jdbc://...</db.url> -->
                        </properties>
                        <secureProperties>
                            <db.password>{ENCRYPTED_DB_PASS}</db.password> <!-- Encrypt via CloudHub -->
                        </secureProperties>

                        <!-- Logging Config -->
                        <scopeLoggingConfigurations>
                            <scopeLoggingConfiguration>
                                <scope>com.mycompany</scope>
                                <logLevel>INFO</logLevel>
                            </scopeLoggingConfiguration>
                        </scopeLoggingConfigurations>

                        <!-- Integrations -->
                        <integrations>
                            <services>
                                <objectStoreV2>
                                    <enabled>true</enabled>
                                </objectStoreV2>
                            </services>
                        </integrations>

                        <!-- Deployment Settings -->
                        <deploymentSettings>
                            <enforceDeployingReplicasAcrossNodes>true</enforceDeployingReplicasAcrossNodes> <!-- HA -->
                            <updateStrategy>rolling</updateStrategy> <!-- Safer redeploys -->
                            <clustered>false</clustered> <!-- Enable for multi-replica clustering -->
                            <http>
                                <inbound>
                                    <publicUrl>${publicURL}</publicUrl>
                                    <pathRewrite>/api/*</pathRewrite> <!-- For private spaces -->
                                    <lastMileSecurity>false</lastMileSecurity> <!-- TLS in app -->
                                    <forwardSslSession>true</forwardSslSession>
                                </inbound>
                            </http>
                            <autoscaling>
                                <enabled>true</enabled>
                                <minReplicas>1</minReplicas>
                                <maxReplicas>2</maxReplicas>
                            </autoscaling>
                            <persistentObjectStore>false</persistentObjectStore>
                            <tracingEnabled>true</tracingEnabled> <!-- OpenTelemetry -->
                            <disableAmLogForwarding>false</disableAmLogForwarding>
                            <generateDefaultPublicUrl>true</generateDefaultPublicUrl>
                        </deploymentSettings>

                        <!-- Business Group (if needed) -->
                        <businessGroupId>{YOUR_BUSINESS_GROUP_ID}</businessGroupId> <!-- Or use <businessGroup>path</businessGroup> -->

                        <!-- Timeouts & Skips -->
                        <deploymentTimeout>1200000</deploymentTimeout> <!-- 20 min -->
                        <skipDeploymentVerification>false</skipDeploymentVerification>
                    </cloudhub2Deployment>
                </configuration>
            </plugin>

            <!-- Compiler Plugin -->
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.13.0</version>
                <configuration>
                    <source>${maven.compiler.source}</source>
                    <target>${maven.compiler.target}</target>
                </configuration>
            </plugin>

            <!-- Surefire for Tests -->
            <plugin>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>3.2.5</version>
            </plugin>
        </plugins>
    </build>
</project>
