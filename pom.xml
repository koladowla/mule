<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 
                             https://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.example.mule</groupId>
    <artifactId>job_mail1</artifactId>
    <version>1.0.0</version>
    <packaging>mule-application</packaging>

    <name>job_mail1</name>
    <description>Mule project for sending emails</description>

    <properties>
        <!-- Mule & Plugin Versions -->
        <mule.maven.plugin.version>4.6.0</mule.maven.plugin.version>
        <mule.runtime.version>4.10.1</mule.runtime.version>

        <!-- CloudHub 2.0 Configuration -->
        <anypoint.org.id>aef0d657-ae25-4c7c-b3f1-6ec206625075</anypoint.org.id>
        <anypoint.env.name>Sandbox</anypoint.env.name>
        <anypoint.region>us-east-1</anypoint.region>
        <app.name>job_mail1</app.name>

        <!-- ðŸ” Connected App credentials (for local testing) -->
        <anypoint.client.id>beadf31e3c9846bda9fa08c3fbe2b2a5</anypoint.client.id>
        <anypoint.client.secret>82b728772c1D488bbbd092772B888ea2</anypoint.client.secret>
    </properties>

    <repositories>
        <repository>
            <id>mulesoft-releases</id>
            <url>https://repository.mulesoft.org/nexus/content/repositories/releases/</url>
        </repository>
        <repository>
            <id>mulesoft-public</id>
            <url>https://repository.mulesoft.org/nexus/content/repositories/public/</url>
        </repository>
    </repositories>

    <dependencies>
        <!-- Mule EE Runtime -->
        <dependency>
            <groupId>org.mule.runtime</groupId>
            <artifactId>mule-ee</artifactId>
            <version>${mule.runtime.version}</version>
            <scope>provided</scope>
        </dependency>

        <!-- HTTP Connector -->
        <dependency>
            <groupId>org.mule.connectors</groupId>
            <artifactId>mule-http-connector</artifactId>
            <version>1.11.0</version>
            <classifier>mule-plugin</classifier>
            <scope>provided</scope>
        </dependency>

        <!-- Email Connector -->
        <dependency>
            <groupId>org.mule.connectors</groupId>
            <artifactId>mule-email-connector</artifactId>
            <version>1.7.7</version>
            <classifier>mule-plugin</classifier>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.mule.tools.maven</groupId>
                <artifactId>mule-maven-plugin</artifactId>
                <version>${mule.maven.plugin.version}</version>
                <extensions>true</extensions>
                <configuration>
                    <deploymentTargets>
                        <target>default</target>
                    </deploymentTargets>
                    <cloudHubDeployment>
                        <applicationName>${app.name}</applicationName>
                        <region>${anypoint.region}</region>
                        <workers>
                            <amount>1</amount>
                            <type>Micro</type>
                        </workers>
                        <vCore>0.1</vCore>
                        <workerType>Micro</workerType>
                        <monitoringEnabled>true</monitoringEnabled>
                    </cloudHubDeployment>
                    <connectedAppClientId>${anypoint.client.id}</connectedAppClientId>
                    <connectedAppClientSecret>${anypoint.client.secret}</connectedAppClientSecret>
                    <environment>${anypoint.env.name}</environment>
                    <organization>${anypoint.org.id}</organization>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
