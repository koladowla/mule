<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>3607ebc0-9f6f-45e6-81c1-121fa7ccfb16</groupId>
    <artifactId>job_mail</artifactId>
    <version>1.0.0</version>
    <packaging>mule-application</packaging>
    <name>job_mail</name>

    <description>MuleSoft Job Mail Application</description>

    <properties>
        <mule.runtime>4.10.0</mule.runtime>
        <mule.maven.plugin.version>4.5.3</mule.maven.plugin.version>
        <munit.version>3.6.1</munit.version>
        <munit.maven.plugin.version>3.6.1</munit.maven.plugin.version>
        <java.version>17</java.version>
        <encoding>UTF-8</encoding>
        <sonar.projectKey>Dowla_job_mail</sonar.projectKey>
        <sonar.projectName>job_mail</sonar.projectName>
        <sonar.language>java</sonar.language>
        <sonar.sourceEncoding>UTF-8</sonar.sourceEncoding>
        
        <!-- Define placeholders for Jenkins injection -->
        <anypoint.username/>
        <anypoint.password/>
        <cloudhub.environment/>
        <app.name>job-mail-app</app.name>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-clean-plugin</artifactId>
                <version>3.3.2</version>
            </plugin>
            <plugin>
                <groupId>org.mule.tools.maven</groupId>
                <artifactId>mule-maven-plugin</artifactId>
                <version>${mule.maven.plugin.version}</version>
                <extensions>true</extensions>
                <configuration>
                    <classifier>mule-application</classifier>
                    <deploymentType>cloudhub</deploymentType>
                    <cloudHubDeployment>
                        <username>${anypoint.username}</username>
                        <password>${anypoint.password}</password>
                        <environment>${cloudhub.environment}</environment>
                        <applicationName>${app.name}</applicationName>
                        <workers>1</workers>
                        <workerType>MICRO</workerType>
                        <region>us-east-1</region>
                    </cloudHubDeployment>
                </configuration>
                <executions>
                    <execution>
                        <id>deploy</id>
                        <phase>deploy</phase>
                        <goals>
                            <goal>deploy</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <!-- MUnit and Sonar plugins omitted for brevity -->
        </plugins>
    </build>
    <!-- Dependencies, repositories, and plugin repositories omitted for brevity -->
</project>
