<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             https://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>3607ebc0-9f6f-45e6-81c1-121fa7ccfb16</groupId>
    <artifactId>job_mail</artifactId>
    <version>1.0.0</version>
    <packaging>mule-application</packaging>
    <name>job_mail</name>

    <properties>
        <mule.runtime>4.10.0</mule.runtime>
        <mule.maven.plugin.version>4.5.3</mule.maven.plugin.version>
        <java.version>17</java.version>

        <!-- Connected App Credentials -->
        <anypoint.clientId>${anypoint.clientId}</anypoint.clientId>
        <anypoint.clientSecret>${anypoint.clientSecret}</anypoint.clientSecret>
    </properties>

    <profiles>
        <profile>
            <id>dev</id>
            <properties>
                <cloudhub.environment>Sandbox</cloudhub.environment>
                <cloudhub.applicationName>job-mail-app-dev</cloudhub.applicationName>
                <cloudhub.region>us-east-1</cloudhub.region>
                <cloudhub.workers>1</cloudhub.workers>
                <cloudhub.workerType>Micro</cloudhub.workerType>
            </properties>
        </profile>
    </profiles>

    <build>
        <plugins>
            <plugin>
                <groupId>org.mule.tools.maven</groupId>
                <artifactId>mule-maven-plugin</artifactId>
                <version>${mule.maven.plugin.version}</version>
                <extensions>true</extensions>
                <configuration>
                    <classifier>mule-application</classifier>
                    <cloudHubDeployment>
                        <muleVersion>${mule.runtime}</muleVersion>
                        <clientId>${anypoint.clientId}</clientId>
                        <clientSecret>${anypoint.clientSecret}</clientSecret>
                        <environment>${cloudhub.environment}</environment>
                        <applicationName>${cloudhub.applicationName}</applicationName>
                        <workers>${cloudhub.workers}</workers>
                        <workerType>${cloudhub.workerType}</workerType>
                        <region>${cloudhub.region}</region>
                        <properties>
                            <http.port>8081</http.port>
                        </properties>
                    </cloudHubDeployment>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.mule.connectors</groupId>
            <artifactId>mule-http-connector</artifactId>
            <version>1.11.0</version>
            <classifier>mule-plugin</classifier>
        </dependency>
    </dependencies>

    <repositories>
        <repository>
            <id>mulesoft-releases</id>
            <url>https://repository.mulesoft.org/releases/</url>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>mulesoft-releases</id>
            <url>https://repository.mulesoft.org/releases/</url>
        </pluginRepository>
    </pluginRepositories>

</project>
