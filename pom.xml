<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.example.mule</groupId>
    <artifactId>job_mail1</artifactId>
    <version>1.0.0</version>
    <packaging>mule-application</packaging>

    <properties>
        <mule.maven.plugin.version>4.6.0</mule.maven.plugin.version>
        <mule.runtime.version>4.10.1</mule.runtime.version>

        <!-- Connected App credentials (for CloudHub deployment) -->
        <anypoint.connected.app.clientId>beadf31e3c9846bda9fa08c3fbe2b2a5</anypoint.connected.app.clientId>
        <anypoint.connected.app.clientSecret>82b728772c1D488bbbd092772B888ea2</anypoint.connected.app.clientSecret>

        <anypoint.org.id>aef0d657-ae25-4c7c-b3f1-6ec206625075</anypoint.org.id>
        <anypoint.env.name>Sandbox</anypoint.env.name>
        <anypoint.region>us-east-1</anypoint.region>
        <app.name>job_mail1</app.name>
    </properties>

    <dependencies>
        <!-- Mule Runtime -->
        <dependency>
            <groupId>org.mule.runtime</groupId>
            <artifactId>mule-ee</artifactId>
            <version>${mule.runtime.version}</version>
            <scope>provided</scope>
        </dependency>

        <!-- HTTP Connector -->
        <dependency>
            <groupId>org.mule.connectors</groupId>
            <artifactId>mule-http-connector</artifactId>
            <version>1.11.0</version>
            <classifier>mule-plugin</classifier>
            <scope>provided</scope>
        </dependency>

        <!-- Email Connector -->
        <dependency>
            <groupId>org.mule.connectors</groupId>
            <artifactId>mule-email-connector</artifactId>
            <version>1.7.7</version>
            <classifier>mule-plugin</classifier>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.mule.tools.maven</groupId>
                <artifactId>mule-maven-plugin</artifactId>
                <version>${mule.maven.plugin.version}</version>
                <extensions>true</extensions>
                <configuration>
                    <deployment>
                        <target>cloudhub</target>
                        <applicationName>${app.name}</applicationName>
                        <region>${anypoint.region}</region>

                        <connectedApp>
                            <clientId>${anypoint.connected.app.clientId}</clientId>
                            <clientSecret>${anypoint.connected.app.clientSecret}</clientSecret>
                        </connectedApp>

                        <workers>
                            <amount>1</amount>
                            <type>Micro</type>
                        </workers>
                    </deployment>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <repositories>
        <!-- MuleSoft public and releases -->
        <repository>
            <id>mulesoft-releases</id>
            <url>https://repository.mulesoft.org/nexus/content/repositories/releases/</url>
        </repository>
        <repository>
            <id>mulesoft-public</id>
            <url>https://repository.mulesoft.org/nexus/content/repositories/public/</url>
        </repository>

        <!-- EXCHANGE REPO (needed for connectors) -->
        <repository>
            <id>anypoint-exchange-v3</id>
            <url>https://maven.anypoint.mulesoft.com/api/v3/maven</url>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>mulesoft-releases</id>
            <url>https://repository.mulesoft.org/nexus/content/repositories/releases/</url>
        </pluginRepository>

        <pluginRepository>
            <id>anypoint-exchange-v3</id>
            <url>https://maven.anypoint.mulesoft.com/api/v3/maven</url>
        </pluginRepository>
    </pluginRepositories>

</project>
