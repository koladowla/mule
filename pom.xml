<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             https://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.example.mule</groupId>
    <artifactId>job_mail</artifactId>
    <version>1.0.0</version>
    <packaging>mule-application</packaging>

    <name>Job Mail Mule Application</name>

    <properties>
        <mule.maven.plugin.version>4.5.3</mule.maven.plugin.version>
        <anypoint.username>${anypoint.username}</anypoint.username>
        <anypoint.password>${anypoint.password}</anypoint.password>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <dependencies>
        <!-- Mule Runtime Dependencies -->
        <dependency>
            <groupId>org.mule.runtime</groupId>
            <artifactId>mule-core</artifactId>
            <version>4.6.2</version>
            <scope>provided</scope>
        </dependency>

        <!-- Example: Email Connector -->
        <dependency>
            <groupId>org.mule.connectors</groupId>
            <artifactId>mule-email-connector</artifactId>
            <version>1.6.6</version>
        </dependency>

        <!-- Add more connectors/dependencies here -->
    </dependencies>

    <build>
        <plugins>
            <!-- Mule Maven Plugin -->
            <plugin>
                <groupId>org.mule.tools.maven</groupId>
                <artifactId>mule-maven-plugin</artifactId>
                <version>${mule.maven.plugin.version}</version>
                <extensions>true</extensions>
                <configuration>
                    <cloudHubDeployment>
                        <username>${anypoint.username}</username>
                        <password>${anypoint.password}</password>
                        <applicationName>job-mail-app</applicationName>
                        <workers>1</workers>
                        <workerType>Micro</workerType>
                        <environment>Sandbox</environment>
                        <region>us-east-1</region>
                        <runtime>4.6.2</runtime>
                    </cloudHubDeployment>

                    <exchangeDeployment>
                        <exchangeId>com.example:job-mail:1.0.0</exchangeId>
                        <provider>mule</provider>
                        <version>1.0.0</version>
                    </exchangeDeployment>
                </configuration>
            </plugin>

            <!-- Compiler Plugin (optional, for Java sources) -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.11.0</version>
                <configuration>
                    <source>17</source>
                    <target>17</target>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <repositories>
        <repository>
            <id>mulesoft-releases</id>
            <name>MuleSoft Releases</name>
            <url>https://repository.mulesoft.org/nexus/content/repositories/releases/</url>
        </repository>
    </repositories>

</project>
