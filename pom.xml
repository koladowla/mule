<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>3607ebc0-9f6f-45e6-81c1-121fa7ccfb16</groupId>
    <artifactId>job_mail</artifactId>
    <version>1.0.0</version>
    <packaging>mule-application</packaging>
    <name>job_mail</name>

    <description>MuleSoft Job Mail Application</description>

    <properties>
        <!-- Versions aligned to first POM -->
        <mule.runtime>4.3.0</mule.runtime>
        <mule.maven.plugin.version>3.3.5</mule.maven.plugin.version>
        <munit.version>2.2.4</munit.version>
        <munit.maven.plugin.version>2.2.4</munit.maven.plugin.version>
        <java.version>8</java.version>
        <encoding>UTF-8</encoding>

        <!-- Sonar metadata (optional, retained from your POM) -->
        <sonar.projectKey>Dowla_job_mail</sonar.projectKey>
        <sonar.projectName>job_mail</sonar.projectName>
        <sonar.language>java</sonar.language>
        <sonar.sourceEncoding>UTF-8</sonar.sourceEncoding>
    </properties>

    <build>
        <plugins>
            <!-- Clean plugin -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-clean-plugin</artifactId>
                <version>3.3.2</version>
            </plugin>

            <!-- Mule Maven Plugin -->
            <plugin>
                <groupId>org.mule.tools.maven</groupId>
                <artifactId>mule-maven-plugin</artifactId>
                <version>${mule.maven.plugin.version}</version>
                <extensions>true</extensions>
                <configuration>
                    <classifier>mule-application</classifier>
                    <deploymentType>cloudhub</deploymentType>
                    <cloudHubDeployment>
                        <username>TitanDowla</username>
                        <password>Dowla@123</password>
                        <environment>Sandbox</environment>
                        <applicationName>job-mail-app</applicationName>
                        <workers>1</workers>
                        <workerType>Micro</workerType>
                        <region>us-east-1</region>
                    </cloudHubDeployment>
                </configuration>
            </plugin>

            <!-- MUnit Plugin -->
            <plugin>
                <groupId>com.mulesoft.munit.tools</groupId>
                <artifactId>munit-maven-plugin</artifactId>
                <version>${munit.maven.plugin.version}</version>
                <executions>
                    <execution>
                        <id>munit-tests</id>
                        <phase>test</phase>
                        <goals>
                            <goal>test</goal>
                            <goal>coverage-report</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <coverage>
                        <runCoverage>true</runCoverage>
                        <formats>
                            <format>html</format>
                        </formats>
                    </coverage>
                </configuration>
            </plugin>

            <!-- Sonar Plugin -->
            <plugin>
                <groupId>org.sonarsource.scanner.maven</groupId>
                <artifactId>sonar-maven-plugin</artifactId>
                <version>3.11.0.3922</version>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <!-- From original Mule 4.3 project -->
        <dependency>
            <groupId>org.mule.connectors</groupId>
            <artifactId>mule-http-connector</artifactId>
            <version>1.5.17</version>
            <classifier>mule-plugin</classifier>
        </dependency>

        <dependency>
            <groupId>14880421-4ee9-4275-6337-3816482cf4da.enterprise</groupId>
            <artifactId>common-frameworks-mule4</artifactId>
            <version>2.5.1</version>
        </dependency>

        <dependency>
            <groupId>14088f21-4ee9-4275-6337-3816482cf4da.enterprise</groupId>
            <artifactId>json-logger-module</artifactId>
            <version>1.0.6</version>
            <classifier>mule-plugin</classifier>
        </dependency>

        <dependency>
            <groupId>org.mule.modules</groupId>
            <artifactId>mule-apikit-module</artifactId>
            <version>1.3.12</version>
            <classifier>mule-plugin</classifier>
        </dependency>

        <dependency>
            <groupId>14088f21-4ee9-4275-6337-3816482cf4da.enterprise</groupId>
            <artifactId>configuration-service-connector-mule4</artifactId>
            <version>3.2.0</version>
            <classifier>mule-plugin</classifier>
        </dependency>

        <dependency>
            <groupId>14080421-4ee9-4275-6337-3816482cf4da.enterprise</groupId>
            <artifactId>jwt-token-security-module-mule4</artifactId>
            <version>3.0.0</version>
            <classifier>mule-plugin</classifier>
        </dependency>

        <!-- MUnit Dependencies -->
        <dependency>
            <groupId>com.mulesoft.munit</groupId>
            <artifactId>munit-runner</artifactId>
            <version>${munit.version}</version>
            <classifier>mule-plugin</classifier>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>com.mulesoft.munit</groupId>
            <artifactId>munit-tools</artifactId>
            <version>${munit.version}</version>
            <classifier>mule-plugin</classifier>
            <scope>test</scope>
        </dependency>

        <!-- Utility -->
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-compress</artifactId>
            <version>1.27.1</version>
        </dependency>
    </dependencies>

    <repositories>
        <repository>
            <id>anypoint-exchange</id>
            <name>Anypoint Exchange</name>
            <url>https://maven.anypoint.mulesoft.com/api/v1/maven</url>
        </repository>
        <repository>
            <id>mulesoft-releases</id>
            <name>MuleSoft Releases Repository</name>
            <url>https://repository.mulesoft.org/releases/</url>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>mulesoft-releases</id>
            <url>https://repository.mulesoft.org/releases/</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>

</project>
