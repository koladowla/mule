<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>3607ebc0-9f6f-45e6-81c1-121fa7ccfb16</groupId>
    <artifactId>job_mail</artifactId>
    <version>1.0.0</version>
    <packaging>mule-application</packaging>
    <name>job_mail</name>
    <description>MuleSoft Job Mail Application</description>

    <properties>
        <mule.runtime>4.10.0</mule.runtime>
        <mule.maven.plugin.version>3.9.0</mule.maven.plugin.version>
        <java.version>17</java.version>
        <encoding>UTF-8</encoding>
    </properties>

    <build>
        <plugins>
            <!-- Clean Plugin -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-clean-plugin</artifactId>
                <version>3.3.2</version>
            </plugin>

            <!-- Mule Maven Plugin for CloudHub 2.0 Deployment -->
            <plugin>
                <groupId>org.mule.tools.maven</groupId>
                <artifactId>mule-maven-plugin</artifactId>
                <version>${mule.maven.plugin.version}</version>
                <extensions>true</extensions>
                <configuration>
                    <classifier>mule-application</classifier>
                    <deploymentType>cloudhub2</deploymentType>
                    <region>us-east-1</region>
                    <target>Sandbox</target>

                    <!-- Connected App authentication -->
                    <connectedAppClientId>${anypoint.clientId}</connectedAppClientId>
                    <connectedAppClientSecret>${anypoint.clientSecret}</connectedAppClientSecret>
                    <connectedAppGrantType>client_credentials</connectedAppGrantType>

                    <!-- Application details -->
                    <applicationName>job-mail-app</applicationName>
                    <workers>1</workers>
                    <workerType>MICRO</workerType>
                    <objectStoreV2>true</objectStoreV2>

                    <!-- Skip tests -->
                    <skip>true</skip>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <!-- Mule Connectors -->
        <dependency>
            <groupId>org.mule.connectors</groupId>
            <artifactId>mule-http-connector</artifactId>
            <version>1.11.0</version>
            <classifier>mule-plugin</classifier>
        </dependency>

        <dependency>
            <groupId>org.mule.connectors</groupId>
            <artifactId>mule-email-connector</artifactId>
            <version>1.7.7</version>
            <classifier>mule-plugin</classifier>
        </dependency>

        <dependency>
            <groupId>org.mule.connectors</groupId>
            <artifactId>mule-file-connector</artifactId>
            <version>1.5.5</version>
            <classifier>mule-plugin</classifier>
        </dependency>

        <dependency>
            <groupId>org.mule.connectors</groupId>
            <artifactId>mule-sockets-connector</artifactId>
            <version>1.2.7</version>
            <classifier>mule-plugin</classifier>
        </dependency>

        <!-- Utility Library -->
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-compress</artifactId>
            <version>1.27.1</version>
        </dependency>
    </dependencies>

    <repositories>
        <repository>
            <id>anypoint-exchange-v3</id>
            <name>Anypoint Exchange</name>
            <url>https://maven.anypoint.mulesoft.com/api/v3/maven</url>
        </repository>
        <repository>
            <id>mulesoft-releases</id>
            <name>MuleSoft Releases</name>
            <url>https://repository.mulesoft.org/releases/</url>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>mulesoft-releases</id>
            <url>https://repository.mulesoft.org/releases/</url>
        </pluginRepository>
    </pluginRepositories>

</project>
