<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 
                             https://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>com.example.mule</groupId>
    <artifactId>job_mail1</artifactId>
    <version>1.0.0</version>
    <packaging>mule-application</packaging>

    <properties>
        <!-- Mule runtime & Maven plugin versions -->
        <mule.maven.plugin.version>4.5.3</mule.maven.plugin.version>
        <mule.runtime.version>4.9.11</mule.runtime.version>

        <!-- CloudHub 2.0 Configuration -->
        <anypoint.org.id>aef0d657-ae25-4c7c-b3f1-6ec206625075</anypoint.org.id>
        <anypoint.env.name>Sandbox</anypoint.env.name>
        <anypoint.region>us-east-1</anypoint.region>
        <app.name>job_mail1</app.name>

        <!-- Connected App credentials (hardcoded for local/CI use) -->
        <anypoint.client.id>beadf31e3c9846bda9fa08c3fbe2b2a5</anypoint.client.id>
        <anypoint.client.secret>82b728772c1D488bbbd092772B888ea2</anypoint.client.secret>
    </properties>

    <!-- MuleSoft Public Plugin Repository -->
    <pluginRepositories>
        <pluginRepository>
            <id>mulesoft-public</id>
            <url>https://repository.mulesoft.org/nexus/content/repositories/public/</url>
        </pluginRepository>
    </pluginRepositories>

    <build>
        <plugins>
            <plugin>
                <groupId>org.mule.tools.maven</groupId>
                <artifactId>mule-maven-plugin</artifactId>
                <version>${mule.maven.plugin.version}</version>
                <extensions>true</extensions>
                <configuration>
                    <!-- Mule Runtime -->
                    <muleVersion>${mule.runtime.version}</muleVersion>

                    <!-- CloudHub 2.0 deployment (4.5.3 syntax) -->
                    <cloudHubDeployment>
                        <applicationName>${app.name}</applicationName>
                        <workers amount="1" type="Micro"/>
                        <region>${anypoint.region}</region>
                        <environment>${anypoint.env.name}</environment>
                        <properties>
                            <!-- Optional Mule properties -->
                        </properties>
                    </cloudHubDeployment>

                    <!-- Connected App credentials -->
                    <connectedAppClientId>${anypoint.client.id}</connectedAppClientId>
                    <connectedAppClientSecret>${anypoint.client.secret}</connectedAppClientSecret>
                    <organizationId>${anypoint.org.id}</organizationId>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
